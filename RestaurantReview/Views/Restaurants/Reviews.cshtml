@model IEnumerable<RestaurantReview.Models.Review>

@{
    ViewBag.Title = "Reviews";
}

<h2>Reviews</h2>

<div>
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <h4>Review</h4>
    <hr />
@foreach (var item in Model)
{
    <dl class="dl-horizontal">

        <dt>
            @Html.DisplayNameFor(model => model.title)
        </dt>

        <dd>
            @Html.DisplayFor(modelItem => item.title)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.reviewed_by)
        </dt>

        <dd>
            @Html.DisplayFor(modelItem => item.reviewed_by)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.date)
        </dt>

        <dd>
            @Html.DisplayFor(modelItem => item.date)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.rating)
        </dt>

        <dd>
            @Html.DisplayFor(modelItem => item.rating)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.content)
        </dt>

        <dd>
            @Html.DisplayFor(modelItem => item.content)
        </dd>

    </dl>
    <p>
    @Html.ActionLink("Edit", "EditReviews", new { id = item.reviewId }) |
 
    @Html.ActionLink("Back to List", "Index")
    </p>
}   
    @Html.ActionLink("Add your review", "AddReviews")
</div>
